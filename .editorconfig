root = true

[*]
insert_final_newline = true
charset = utf-8
trim_trailing_whitespace = true
indent_style = space
indent_size = tab
tab_width = 2
end_of_line = lf

[{Makefile,go.mod,go.sum,*.go,.gitmodules}]
indent_style = tab
tab_width = 4

[*.md]
trim_trailing_whitespace = false

eclint_indent_style = unset

[Dockerfile]
tab_width = 4

[*.{env,env.local,env.*.local}]
insert_final_newline = false